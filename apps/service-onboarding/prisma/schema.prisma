generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model OnboardingTemplate {
  id          String   @id @default(uuid())
  companyId   String
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
  assignments EmployeeOnboarding[]

  @@map("onboarding_templates")
}

model Task {
  id          String      @id @default(uuid())
  templateId  String
  title       String
  description String?
  videoUrl    String?
  linkUrl     String?
  dueAfterDays Int        @default(7)
  order       Int         @default(0)
  isRequired  Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  template    OnboardingTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  progress    TaskProgress[]

  @@map("tasks")
}

model EmployeeOnboarding {
  id          String    @id @default(uuid())
  employeeId  String
  templateId  String
  companyId   String
  startDate   DateTime  @default(now())
  dueDate     DateTime?
  status      OnboardingStatus @default(in_progress)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  template    OnboardingTemplate @relation(fields: [templateId], references: [id])
  taskProgress TaskProgress[]

  @@map("employee_onboardings")
}

model TaskProgress {
  id                   String    @id @default(uuid())
  employeeOnboardingId String
  taskId               String
  status               TaskStatus @default(pending)
  completedAt          DateTime?
  notes                String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  employeeOnboarding   EmployeeOnboarding @relation(fields: [employeeOnboardingId], references: [id], onDelete: Cascade)
  task                 Task @relation(fields: [taskId], references: [id])

  @@unique([employeeOnboardingId, taskId])
  @@map("task_progress")
}

enum OnboardingStatus {
  not_started
  in_progress
  completed
  overdue
}

enum TaskStatus {
  pending
  in_progress
  completed
  skipped
}
