# ─── DATABASE ──────────────────────────────────────────────
POSTGRES_URL=postgresql://user:password@host/onboardai
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/onboardai
REDIS_URL=redis://localhost:6379

# ─── AUTH ──────────────────────────────────────────────────
JWT_SECRET=change_this_to_a_long_random_string_minimum_32_chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ─── AI ────────────────────────────────────────────────────
GROQ_API_KEY=your_groq_api_key
HUGGINGFACE_API_KEY=your_hf_api_key

# ─── EMAIL ─────────────────────────────────────────────────
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@onboardai.com

# ─── STORAGE ───────────────────────────────────────────────
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_BUCKET=onboardai-files

# ─── SERVICES ──────────────────────────────────────────────
AUTH_SERVICE_URL=http://localhost:3001
ONBOARDING_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# ─── APP ───────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
